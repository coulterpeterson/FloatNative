<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <!-- Center Transport Controls -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@id/exo_rew"
            style="@style/ExoMediaButton.Rewind"
            android:src="@drawable/exo_icon_rewind"
            android:tint="@android:color/white"
            android:background="@drawable/bg_player_button"
            android:focusable="true"/>

        <ImageButton
            android:id="@id/exo_play_pause"
            style="@style/ExoMediaButton.Play"
            android:src="@drawable/exo_icon_play"
            android:tint="@android:color/white"
            android:background="@drawable/bg_player_button"
            android:focusable="true"/>

        <ImageButton
            android:id="@id/exo_ffwd"
            style="@style/ExoMediaButton.FastForward"
            android:src="@drawable/exo_icon_fastforward"
            android:tint="@android:color/white"
            android:background="@drawable/bg_player_button"
            android:focusable="true"/>

    </LinearLayout>

    <!-- Bottom Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#CC000000"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.media3.ui.DefaultTimeBar
            android:id="@id/exo_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:text="Â·"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@id/exo_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <!-- Action Buttons -->
            <ImageButton
                android:id="@+id/btn_like"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_player_button"
                android:src="@drawable/ic_thumb_up"
                android:contentDescription="Like"
                android:padding="8dp"
                android:focusable="true"/>

            <ImageButton
                android:id="@+id/btn_dislike"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_player_button"
                android:src="@drawable/ic_thumb_down"
                android:contentDescription="Dislike"
                android:padding="8dp"
                android:focusable="true"/>

            <ImageButton
                android:id="@+id/btn_description"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_player_button"
                android:src="@drawable/ic_description"
                android:contentDescription="Description"
                android:padding="8dp"
                android:focusable="true"/>
                
            <ImageButton
                android:id="@+id/btn_comments"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_player_button"
                android:src="@drawable/ic_comment"
                android:contentDescription="Comments"
                android:padding="8dp"
                android:focusable="true"/>

            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_player_button"
                android:src="@drawable/ic_settings"
                android:contentDescription="Settings"
                android:padding="8dp"
                android:focusable="true"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
